<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
            <link href="{{ asset('assets/css/style.min.css') }}" rel="stylesheet"/>
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>

    <navbar>
        <div class="navbar__container">
            <a class="navbar__logo" href="/">LOGO</a>
                <div class="navbar__toggle " id="mobile-menu">
                    <span class="bar"></span>
                    <span class="bar"></span>
                    <span class="bar"></span>
                 </div>
                <ul class="navbar__menu">
                    <li class="navbar__item">
                        <a class="navbar__links" href="/">Accueil</a>
                    </li>
                    <li class="navbar__item">
                        <a class="navbar__links" href="/listing">Evénements</a>
                    </li>
                    <li class="navbar__item">
                        <a  class="navbar__links" href="/nos-salles">Nos Salles</a>
                    </li>
                    {% if is_granted('ROLE_ADMIN') %}
                        <li class="navbar__item">
                            <a class="navbar__links" href="/admin">Admin</a>
                        </li>
                    {% endif %}
                    {% if app.user %}
                        <li  class="navbar__item">
                            <a class="navbar__links" href="/logout">Se déconnecter</a>
                        </li>
                    {% else %}
                        <li class="navbar__item">
                            <a class="navbar__links" href="/login">Se connecter</a>
                        </li>
                        <li class="navbar__item">
                            <a class="navbar__links" href="/register">S'enregistrer</a>
                        </li>
                    {% endif %}
                    {# <li class="navbar__item"><a href="{{ path('contact') }}">Contact</a></li> #}
                    <li class="navbar__item">
                    <a class="navbar__links" href="/cart">Panier</a>
                    </li>
            </ul>
        </div>
    </navbar>
        <script src="{{ asset('assets/js/bootstrap.bundle.min.js') }}"></script>
        {% block body %}{% endblock %}

        <footer>
        <div class="footer__container">
            <div class="terms">
                <h3 class="titre__terms">Avignon Tickets</h3>
                <a class="terms__a" href="#">Mentions Légales</a><br />
                <a class="terms__a" href="#">Conditions Générales de Ventes</a>
            </div>
            <div class="rs">
                <h3 class="titre__rs">Réseaux Sociaux</h3>
                <a href="#"><img class="img__rs" src="/assets/img/facebook.png" alt="facebook avigon"></a>
                <a href="#"><img class="img__rs" src="/assets/img/instagram.png" alt="instagram avigon"></a>
                <a href="#"><img class="img__rs" src="/assets/img/twitter.png" alt="twitter avigon"></a>
            </div>
            <div class="crea">
                <h3 class="titre__crea">Créateurs</h3>
                <p>Alexandre Dosne</p>
                <p>Baptiste Cuny</p>
            </div>
        </div>
        </footer>
        <script src="/assets/js/app.min.js"></script>
        {% block post_body_js %}{% endblock %}
    </body>
</html>
