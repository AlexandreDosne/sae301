{% extends 'base.html.twig' %}

{% block body %}
<div class="container">
    <div id="listing" class="row">
        <h1 class="titre__listing">Evénements à venir</h1>
            <div class="listing__filter" id="filter">
                <button class="btn__filter" id="jsCatAll">Tout</button>
                <button class="btn__filter" id="jsCat0">Théâtre</button>
                <button class="btn__filter" id="jsCat1">Concert</button>
                <button class="btn__filter" id="jsCat2">Spectacle</button>
                <button class="btn__filter" id="jsCat3">Exposition</button>
            </div>
        {% for manif in manifestations %}
        <div class="event__listing cat{{ manif.genre }}">
            <div class="card__event">
                <img src="{{ manif.affiche }}" class="card-img-top" alt="Affiche de {{ manif.titre }}">
                <div class="card-body">
                    <h5 class="card-title">{{ manif.titre }}</h5>
                    <p class="card-text">
                        <em class="h6"> {{ manif.horaire }}</em><br />
                        <span class="h5">{{ manif.description }}</span>
                    </p>
                </div>
                <ul class="list-info">
                    <li class="list-group-item">Prix: {{manif.tarif}}€</li> <br />
                    <li class="list-group-item">Genre: {{ manif.genre }}</li> <br />
                    <li class="list-group-item">Casting: {{ manif.casting }}</li>
                </ul>
                <div class="btn__body">
                    <a href="/listing/{{ manif.id }}" class="btn__listing">Voir</a>
                </div>
            </div>
        </div>
        {% endfor %}
    </div>
</div>
{% endblock %}

{% block post_body_js %}
<script src="{{ asset('assets/js/listFilter.min.js') }}"></script>
{% endblock %}